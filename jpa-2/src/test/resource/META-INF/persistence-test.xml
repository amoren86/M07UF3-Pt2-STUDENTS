<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
	version="3.0">
	<persistence-unit name="UsersPersistenceUnitTest"
		transaction-type="JTA">
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>cat.institutmarianao.domain.User</class>
		<properties>
			<property name="jakarta.persistence.transactionType"
				value="JTA" />

			<property name="jakarta.persistence.jdbc.driver"
				value="org.h2.Driver" />
			<property name="jakarta.persistence.jdbc.user"
				value="username" />
			<property name="jakarta.persistence.jdbc.password"
				value="password" />
			<property name="jakarta.persistence.jdbc.url"
				value="jdbc:h2:mem:users" />

			<property
				name="jakarta.persistence.schema-generation.database.action"
				value="drop-and-create" />
			<property
				name="jakarta.persistence.schema-generation.create-source"
				value="script" />
			<property name="jakarta.persistence.sql-load-script-source"
				value="init.sql" />

		</properties>
	</persistence-unit>
</persistence>
